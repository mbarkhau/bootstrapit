stages:
  - test
  - build


unit:
  stage: test
  image: ${DOCKER_BASE_IMAGE}
  script:
    - make lint
    - make mypy
    - make test
  coverage: '/^(TOTAL|src).*?(\d+\%)$/'
  artifacts:
    paths:
      - htmlcov/
  allow_failure: false


pages:
  stage: build
  script:
    - mkdir -p public/cov
    - mkdir -p public/mypycov
    - cp -r htmlcov/* public/cov/
    - cp -r mypycov/* public/mypycov/
  artifacts:
    paths:
      - public
  only:
    - master
